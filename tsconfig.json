{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2023",
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "noUnusedLocals": true
  }
}
